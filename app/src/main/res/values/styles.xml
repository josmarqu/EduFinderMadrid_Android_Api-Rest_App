<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/soft_blue</item>
        <item name="android:background">@drawable/roundstyle</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="MainActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:backgroundTint">@color/soft_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>